- content_for :header_tags do
  %script#initial-state{ type: 'application/json' }!= json_escape(@initial_state_json)

  = stylesheet_pack_tag 'upload', media: 'all'
  = javascript_pack_tag 'upload', integrity: true, crossorigin: 'anonymous'

- content_for :content do
  .app-holder#pawoo-music-upload{ data: { props: Oj.dump(default_props) } }
    %noscript
      = image_tag asset_pack_path('logo.svg')
      %div
        = t('errors.noscript')
  = yield

= render template: 'layouts/application'
